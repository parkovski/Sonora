<rxui:ReactiveUserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:rxui="http://reactiveui.net"
             xmlns:vm="using:Sonora.ViewModels"
             mc:Ignorable="d" d:DesignWidth="400" d:DesignHeight="450"
             x:Class="Sonora.Views.FilesView"
             x:TypeArguments="vm:FilesViewModel">
  <Design.DataContext>
    <vm:FilesViewModel/>
  </Design.DataContext>
  <StackPanel Orientation="Vertical">
    <Grid ColumnDefinitions="*,auto">
      <TextBlock Grid.Column="0" Text="{Binding Directory}" VerticalAlignment="Center" Margin="4,0,4,0"/>
      <Button Grid.Column="1" Content="..." Command="{Binding ChooseDirectoryCommand}"/>
    </Grid>
    <ListBox ItemsSource="{Binding Files}">
      <ListBox.ItemsPanel>
        <ItemsPanelTemplate>
          <WrapPanel/>
        </ItemsPanelTemplate>
      </ListBox.ItemsPanel>
      <ListBox.ItemTemplate>
        <DataTemplate>
          <TextBlock Text="{Binding}"/>
        </DataTemplate>
      </ListBox.ItemTemplate>
    </ListBox>
  </StackPanel>
</rxui:ReactiveUserControl>
